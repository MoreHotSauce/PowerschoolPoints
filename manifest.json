{
	"manifest_version": 2,

	"name": "PowerSchool Points",
	"description": "Helps Count the total points in your gradebook.",
	"version": "2.0",
	"author": "Niket Patel",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {
		"default_popup": "popup.html"
	}
}